<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />
  <div class="courseindex">
  <% @courses.each do |course| %>
  	<h2 class="text-center"><%= link_to course.title, course_path(course) %></h2>
    </br>
    <div class="image text-center col-sm-8 col-xs-12">
      <%= image_tag course.image, class: 'img-responsive' %>
    </div>
    <div class="clear"></div>
    <br />
  	<div class="description col-xs-12">
  		<h4><%= course.description %></h4>
  	</div>
    <div class="clear"></div>
    <br />
  	<div class="col-xs-4 col-sm-12 text-center">
  		<%= link_to 'More Details', course_path(course), class: 'btn btn-default btn-large' %>
  	</div>
    <br />
  	<br class="clr" />
    <br />
  <% end %> 
  </div>


</div>